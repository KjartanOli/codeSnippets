{
	// Place your snippets for python here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	// "Print to console": {
	// 	"prefix": "log",
	// 	"body": [
	// 		"console.log('$1');",
	// 		"$2"
	// 	],
	// 	"description": "Log output to console"
	// }

	"Tkinter":{
		"prefix": "tkinter",
		"body": [
			"from tkinter import *",
			"",
			"window01 = Tk()",
			"window01.title(\"${1:title}\")",
			"",
			"$0",
			"",
			"window01.mainloop()"
		],
		"description": "Inserts the basic structure of a Tkinter script",
	},

	"For":{
		"prefix": "for",
		"body": [
			"for $1 in range($2):",
				"$0"	
		],
		"description": "Inserts a basic python for loop"
	},

	"Intput":{
		"prefix": "intput",
		"body": [
			"${variable} = int(input($0))"
		],
		"description": "Inserts a input command configured as integer"
	},

	"Intvar":{
		"prefix": "intVar",
		"body": [
			"${variable} = IntVar()"
		],
		"description": "Inserts a Tkinter IntVar"
	},

	"StringVar":{
		"prefix": "stringVar",
		"body": [
			"${variable} = StringVar()"
		],
		"description": "Inserts a Tkinter StringVar"
	},

	"Label":{
		"prefix": "label",
		"body": [
			"${variable} = Label(${frame}, text = \"$0\")"
		],
		"description": "Inserts a Tkinter label"
	},

	"Grid":{
		"prefix": "grid",
		"body": [
			"${variable}.grid(row = $2, column = $3)"
		],
		"description": "Inserts a Tkinter grid command"
	}
}