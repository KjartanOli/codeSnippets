			"",
			"const rl = readline.createInterface({",
				"input: process.stdin,",
				"output: process.stdout",
			"});",
			"",
			"rl.on(\"line\", (line) => {",
				"\t$0",
			"});"
		],
		"description": "Inserts the basic structure of a javascript readline script"
	},

	"Module":{
